{
  "extends": "airbnb",

  "parser": "babel-eslint",

  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  "rules":{
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
    "react/prefer-es6-class": 1,
    "jsx-a11y/no-static-element-interactions": 0,
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "no-return-assign": "off"
  },
  "globals": {
    "document": true,
    "localStorage": true
  }
}
